.index
  .index__flame
    -@targets.each do |target|
      .index__flame__main
        .index__flame__main__genre
          = "ジャンル:#{target.genre}"
        .index__flame__main__time
          = "投資時間:#{target.time}"
        .index__flame__main__delete
          = link_to "投稿を削除する" , target_path(target)
        .index__flame__main__title
          = target.title
        
        .index__flame__main__img
          = image_tag target.img , size:'400x200'
          
        =link_to add_target_path(target) , method: :delete do
          .index__flame__main__btn お気に入りを削除する
          
        =link_to target_path(target) do
          .index__flame__main__btn 詳しく見る

.index__pagenation